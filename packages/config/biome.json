{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "root": false,
  "extends": ["ultracite/core", "ultracite/next", "ultracite/react"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/node_modules",
      "!node_modules",
      "!**/.next",
      "!**/dist",
      "!**/out",
      "!**/.turbo",
      "!**/globals.css"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "rules": {
      "style": {
        "noParameterProperties": "off",
        "useConsistentMemberAccessibility": "off",
        "noNonNullAssertion": "off",
        "useBlockStatements": "off",
        "useReadonlyClassProperties": "off",
        "useConsistentTypeDefinitions": "off",
        "noNestedTernary": "off"
      },
      "performance": {
        "noBarrelFile": "off",
        "noNamespaceImport": "off",
        "useTopLevelRegex": "off"
      },
      "suspicious": {
        "noEvolvingTypes": "off",
        "useAwait": "off",
        "noSkippedTests": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off"
      },
      "nursery": {
        "noIncrementDecrement": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  }
}
