{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "root": false,
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!**/node_modules", "!**/.next", "!**/dist", "!**/out"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "asNeeded"
    }
  },
  "css": {
    "parser": {
      "cssModules": true,
      "allowWrongLineComments": false,
      "tailwindDirectives": true
    }
  }
}
