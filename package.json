{
  "name": "next-hono-betterauth-base",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "infisical run -- turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "biome format --write .",
    "prepare": "husky",
    "db:up": "docker compose -f packages/config/docker-compose.yml up -d",
    "db:down": "docker compose -f packages/config/docker-compose.yml down",
    "db:restart": "docker compose -f packages/config/docker-compose.yml restart",
    "db:logs": "docker compose -f packages/config/docker-compose.yml logs -f",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:int": "turbo run test:int",
    "test:e2e": "infisical run --projectId=e3871e85-7a12-4fff-9f5a-5cefd3593a5a --env=staging -- turbo run test:e2e",
    "test:ci": "turbo run test test:e2e"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "ultracite fix"
    ]
  },
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.2",
    "ultracite": "6.5.0",
    "vitest": "catalog:"
  }
}
