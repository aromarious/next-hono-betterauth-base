{
  "name": "webservice-next-hono-base",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "biome format --write .",
    "prepare": "husky",
    "db:up": "docker compose -f packages/config/docker-compose.yml up -d",
    "db:down": "docker compose -f packages/config/docker-compose.yml down",
    "db:restart": "docker compose -f packages/config/docker-compose.yml restart",
    "db:logs": "docker compose -f packages/config/docker-compose.yml logs -f"
  },
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.1.7",
    "turbo": "^2.6.3"
  }
}
