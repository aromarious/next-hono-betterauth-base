{
  "name": "webservice-next-hono-base",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "infisical run -- turbo dev",
    "lint": "turbo lint",
    "format": "biome format --write .",
    "prepare": "husky",
    "db:up": "docker compose -f packages/config/docker-compose.yml up -d",
    "db:down": "docker compose -f packages/config/docker-compose.yml down",
    "db:restart": "docker compose -f packages/config/docker-compose.yml restart",
    "db:logs": "docker compose -f packages/config/docker-compose.yml logs -f",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:int": "turbo run test:int",
    "test:e2e": "infisical run -- turbo run test:e2e",
    "test:ci": "turbo run test test:e2e"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.3",
    "vitest": "catalog:"
  }
}
